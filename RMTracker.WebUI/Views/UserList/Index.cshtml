@model IEnumerable<RMTracker.Core.Models.UserList>

@{
    ViewBag.Title = "Index";
}

<h2>รายชื่อ</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Add Department", "Index", "Departmentuser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreateAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department3)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_User)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department3)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
