@model RMTracker.Core.Models.s_Painting


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>s_Painting</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Status_Painting, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status_Painting, new SelectList(new List<Object> { new { value = "เสร็จ", text = "เสร็จ" }, new { value = "หยุด", text = "หยุด" } }, "value", "text"))
                @Html.ValidationMessageFor(model => model.Status_Painting, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ยืนยัน" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("กลับสู่หน้างานทำสี", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
