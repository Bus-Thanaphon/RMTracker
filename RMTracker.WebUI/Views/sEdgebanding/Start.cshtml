@model RMTracker.Core.Models.s_Edgebanding


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>เริ่มงานปิดขอบ</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.User, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.User, new SelectList(Model.User_Station, "Name", "Name"), new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Machine_Edgebanding, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <table style="width:25%">
                    <tr>
                        <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "Champ Fond", new { Checked = "checked" })<img src="~/Content/Images/HeroProduction/ปิดขอบ/Champfond_wonderwoman.png" width="100" height="100" title="Champ Fond">Champ Fond</p>
                        <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "Nanxing")<img src="~/Content/Images/HeroProduction/ปิดขอบ/Nanxing_catwoman.png" width="100" height="100" title="Nanxing">Nanxing</p>
                        <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "SCM Stefani")<img src="~/Content/Images/HeroProduction/ปิดขอบ/Stefani_Ironman.png" width="100" height="100" title="SCM Stefani">SCM Stefani</p>
                        <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "Automa")<img src="~/Content/Images/HeroProduction/ปิดขอบ/Automa_spiderman.png" width="100" height="100" title="Automa">Automa</p>
                    </tr>
                </table>
            </div>
        </div>
        @*<div class="form-group">
            <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "ChampFond")ChampFond</p>
            <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "Nanxing")Nanxing</p>
            <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "SCM Stefani")SCM Stefani</p>
            <p>@Html.RadioButtonFor(model => model.Machine_Edgebanding, "Automa")Automa</p>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ยืนยัน" class="btn btn-default" />
                @Html.ActionLink("ยกเลิก", "Index",null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
